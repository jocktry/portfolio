---
import 'swiper/css';
import 'swiper/css/pagination';
import 'swiper/css/navigation';
---

<section id="skills" class="px-16 md:px-32 lg:px-64 pb-6 mb-20 mt-5 py-0">
    <div class="swiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/nextdotjs/000000" alt="Next.js" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/react/61DAFB" alt="React" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/nodedotjs/339933" alt="Node.js" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/nestjs/E0234E" alt="NestJS" class="w-10 h-10"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/dotnet/512BD4" alt=".NET" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/docker/2496ED" alt="Docker" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/vuedotjs/4FC08D" alt="Vue.js" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/astro/FF5D01" alt="Astro" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/angular/DD0031" alt="Angular" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/typescript/3178C6" alt="TypeScript" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/javascript/F7DF1E" alt="JavaScript" class="w-8 h-8"></div>
            <div class="swiper-slide"><img src="https://cdn.simpleicons.org/tailwindcss/06B6D4" alt="Tailwind CSS" class="w-6 h-6"></div>
        </div>
    </div>
</section>

<script>
    import Swiper from 'swiper';
    import { Navigation, Pagination, Autoplay } from "swiper/modules";

    Swiper.use([Autoplay, Pagination, Navigation]);

    const swiper = new Swiper('.swiper', {
        spaceBetween: 10,
        slidesPerView: 3,
        breakpoints: {
            640: {
                slidesPerView: 4,
                spaceBetween: 20,
            },
            768: {
                slidesPerView: 6,
                spaceBetween: 40,
            },
        },
        loop: true,
        autoplay: {
            delay: 500, // Ajusta este valor para hacer el movimiento más rápido
            disableOnInteraction: false,
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>